
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<form action="/Product/List" method="get">
    <label for="filter">Filter to Kitchen</label>
    <input type="checkbox" id="filter" name="filter" value="kitchen" @(ViewBag.Filter ? "checked" : "")/>
    <input type="submit" value="Go!" />
</form>

@if (ViewBag.Products != null && ViewBag.Products.Count > 0)
{
<table class="table">
    <tr>
        <th>ID</th>
        <th>Category</th>
        <th>Product Name</th>
    </tr>
    @foreach (Product product in ViewBag.Products)
    {
        <tr>
            <td>@(product.ID)</td>
            <td>@(product.Category.Name)</td>
            <td>@(product.Name)</td>
        </tr>
    }
</table>
}
else
{
    <p>No product data was found.</p>
}
